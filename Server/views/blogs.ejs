<!-- blogs.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Product Blogs</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        margin: 0;
        padding: 0;
      }

      h1 {
        color: #007bff;
      }

      ul {
        list-style: none;
        padding: 0;
      }

      li {
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 10px;
        padding: 15px;
        border-radius: 5px;
        transition: transform 0.3s ease-in-out;
      }

      li:hover {
        transform: scale(1.02);
      }

      a {
        color: #007bff;
        text-decoration: none;
      }

      .pagination {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
      }

      img {
        max-width: 100%; /* Ensure the image doesn't exceed its container */
        height: auto; /* Maintain aspect ratio */
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <h1>Product Blogs</h1>
    <ul>
      <% blogs.forEach(blog => { %>
        <li>
          <h2><%= blog.product_name %></h2>
          <img src="<%= blog.product_img %>" alt="<%= blog.product_name %> Image" />
          <!-- Add more details here if needed -->
        </li>
      <% }); %>
    </ul>

    <div class="pagination">
      <% if (pagination.prev) { %>
        <a href="/products?page=<%= pagination.prev %>">Previous</a>
      <% } %> Page <%= pagination.current %> of <%= pagination.total %> <% if (pagination.next) { %>
        <a href="/products?page=<%= pagination.next %>">Next</a>
      <% } %>
    </div>
  </body>
</html>
